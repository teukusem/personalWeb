<html>
  <head>
    <title>add-project</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/index.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/public/add-project.css" />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-5">
      <div class="container-fluid">
        <img
          src="https://www.dumbways.id/assets/images/brandred.png"
          alt="logo.png"
          class="img-nav"
        />
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/add">Add Project</a>
            </li>
          </ul>

          {{#if isLogin}}
            <a href="#" class="btn btn-text-black me-4">Hello, {{user.name}}</a>
            <a href="/logout" class="btn btn-text-danger me-4">Logout</a>
          {{else}}
            <a href="/register" class="btn btn-text-black me-4">Register</a>
            <a href="/login" class="btn btn-text-black me-4">Login</a>
          {{/if}}
          <a
            href="/contact"
            class="btn btn-outline-dark"
            type="submit"
          >ContactMe</a>
        </div>
      </div>
    </nav>

    <!-- ==============form============== -->
    <form class="add-project-form" action="/register" method="post">
      <h2 style="text-align: center;">Register</h2>
      <!-- =================Project Name=========== -->

      {{#if messages.danger}}
        <div class="alert alert-danger" role="alert">{{messages.danger}}</div>
      {{/if}}

      <div class="mb-3">
        <label for="project-name" class="form-label">User Name</label>
        <input
          type="text"
          class="form-control"
          id="inputUser"
          aria-describedby="emailHelp"
          name="inputUser"
        />
      </div>

      <div class="mb-3">
        <label for="project-name" class="form-label">E-mail</label>
        <input
          type="email"
          class="form-control"
          id="inputEmail"
          aria-describedby="emailHelp"
          name="inputEmail"
        />
      </div>

      <div class="mb-3">
        <label for="inputPass" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="inputPass"
          aria-describedby="emailHelp"
          name="inputPass"
        />
      </div>

      <button type="submit" class="btn btn-dark">Register</button>

    </form>
  </body>
</html>