<html>

  <head>
    <title>edit</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/index.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/public/add-project.css" />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-5">
      <div class="container-fluid">
        <img
          src="https://www.dumbways.id/assets/images/brandred.png"
          alt="logo.png"
          class="img-nav"
        />
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/add">Add Project</a>
            </li>
          </ul>
          
            {{#if isLogin}}
              <a href="#" class="btn btn-text-black me-4">Hello, {{user.name}}</a>
              <a href="/logout" class="btn btn-text-danger me-4">Logout</a>
              {{else}}
               <a href="/register" class="btn btn-text-black me-4">Register</a>
              <a href="/login" class="btn btn-text-black me-4">Login</a>
              {{/if}}
              <a href="/contact" class="btn btn-outline-dark" type="submit">ContactMe</a>
        </div>
      </div>
    </nav>

    <!-- ==============form============== -->
    <form class="add-project-form" action="/edit/{{id}}" method="post"  enctype="multipart/form-data">
      <h2 style="text-align: center;">EDIT MY PROJECT</h2>
      <!-- =================Project Name=========== -->
      <div class="mb-3">
        <label for="project-name" class="form-label">Project Name</label>
        <input
          type="text"
          class="form-control"
          id="inputTitle"
          aria-describedby="emailHelp"
          name="inputTitle"
          value="{{edit.name}}"
        />
      </div>

      <!-- ================Date================ -->
      <div class="date">
        <div class="mb-3">
          <label for="start-date" class="form-label">Start Date</label>
          <input
            type="date"
            class="form-control"
            id="startDate"
            aria-describedby="emailHelp"
            name="startDate"
            value="{{edit.start_date}}"
          />
        </div>
        <div class="mb-3">
          <label for="end-date" class="form-label">End Date</label>
          <input
            type="date"
            class="form-control"
            id="endDate"
            aria-describedby="emailHelp"
            name="endDate"
            value="{{edit.end_date}}"
          />
        </div>
      </div>
      <!-- ================Description=============== -->
      <div class="mb-3">
        <label
          for="exampleInputPassword1"
          class="form-label"
        >Description</label>
        <textarea
          type="text"
          class="form-control"
          id="inputDesc"
          style="height:100px; resize:none"
          name="inputDesc"
        >{{edit.description}}</textarea>
      </div>
      <!-- =================check box==================== -->
      <label for="exampleInputPassword1" class="form-label">Technologies</label>
      <div class="check-flex px-5">
        <div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              id="vueJs"
              name="vueJs"
              {{#if edit.vue}}
                checked
              {{/if}}
              value="true"
            />
            <label class="form-check-label" for="vue-js">
              Vue.js
            </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              id="nodeJs"
              name="nodeJs"
                {{#if edit.node}}
                checked
              {{/if}}
              value="true"
            />
            <label class="form-check-label" for="node-js">
              Node.js
            </label>
          </div>
        </div>
        <div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              id="reactJs"
              name="reactJs"
                {{#if edit.react}}
                checked
              {{/if}}
              value="true"
            />
            <label class="form-check-label" for="react-js">
              React-js
            </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              id="javaScript"
              name="javaScript"
              {{#if edit.java}}
                checked
              {{/if}}
              value="true"
            />
            <label class="form-check-label" for="javascript">
              Javascript
            </label>
          </div>
        </div>
      </div>

      <!-- ================image input=================== -->
      <div class="mb-3">
        <label for="formFile" class="form-label">Upload Image</label>
        <input class="form-control" type="file" id="formFile" name="inputImage"  />
        <input type="hidden"  name="imageValue" value="{{this.image}}">
      </div>

      <button type="submit" class="btn btn-dark">Submit</button>
    </form>

  </body>
</html>