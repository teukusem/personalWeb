<html>
  <head>
    <title>Detail Page</title>
    <link
      href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/index.css">
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/public/detail.css" />
  </head>
  <body>

      <nav class="navbar navbar-expand-lg navbar-light bg-light px-5">
            <div class="container-fluid">
              <img src="https://www.dumbways.id/assets/images/brandred.png" alt="logo.png" class="img-nav">
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/home">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/add">Add Project</a>
                  </li>
                </ul>
         
            {{#if isLogin}}
              <a href="#" class="btn btn-text-black me-4">Hello, {{user.name}}</a>
              <a href="/logout" class="btn btn-text-danger me-4">Logout</a>
              {{else}}
               <a href="/register" class="btn btn-text-black me-4">Register</a>
              <a href="/login" class="btn btn-text-black me-4">Login</a>
              {{/if}}
              <a href="/contact" class="btn btn-outline-dark" type="submit">ContactMe</a>
              </div>
            </div>
       </nav>
 

      <div style="width: 80%; margin: 0px auto">
        <div class="up-detail">
          <h1>{{blog.name}}</h1>
        </div>
        <div style="display: flex">
          <div class="image-detail" style="width: 60%">
            <img
              style="width: 100%"
              src="/uploads/{{blog.image}} "
              alt="image.png"
            />
          </div>

          <div class="asset-detail" style="padding-left: 20px">
            <div class="detail-duration">
              <p style="font-weight: bold">Duration</p>
              <p><i class="bx bx-calendar"></i>{{blog.start_date}} - {{blog.end_date}}</p>
              <p><i class="bx bx-hourglass"></i> {{blog.duration}}</p>
            </div>
            <p style="font-weight: bold">Technologies</p>
            <div style="display: flex">
              <div class="icon-logo">
                {{#if blog.vue}}
                <i class="bx bxl-vuejs true" style="padding: 10px"> Vue.Js</i>
                {{/if}}
                {{#if blog.react}}
                <i class="bx bxl-react true" style="padding: 10px"> React.js</i>
                {{/if}}
              </div>
              <div class="icon-logo">
                {{#if blog.node}}
                <i class="bx bxl-nodejs true" style="padding: 10px">Node.js</i>
                {{/if}}
                {{#if blog.java}}
                <i class="bx bxl-javascript true" style="padding: 10px">Javascript</i>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
        <div style="text-align: justify">
          <p>
           {{blog.description}}
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
